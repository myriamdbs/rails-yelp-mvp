<div class="container">
  <h1>Add a review</h1>
  <%= simple_form_for([ @restaurant, @review ]) do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, as: :radio_buttons, collection: 0..5, wrapper: :vertical_collection_inline %>
      <%= f.submit "Add review", class: 'btn btn-primary'%>
  <% end %>

</div>
